{
  "name": "sensor-manager-api",
  "version": "1.0.0",
  "license": "ISC",
  "description": "",
  "type": "commonjs",
  "scripts": {
    "build": "tsc --project tsconfig.compile.json && tsc-alias",
    "barrels": "barrelsby --config .barrelsby.json",
    "start": "yarn barrels && cross-env NODE_ENV=development tsnd --ignore-watch node_modules --respawn --transpile-only --max-old-space-size=2048 -r tsconfig-paths/register src/index.ts",
    "start:prod": "cross-env NODE_ENV=staging node dist/index.js",
    "test": "cross-env NODE_ENV=test jest --passWithNoTests",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:generate": "npx prisma generate",
    "prisma:studio": "npx prisma studio",
    "lint": "eslint '**/*.{ts,js}'",
    "lint:fix": "eslint '**/*.{ts,js}' --fix",
    "format": "prettier '**/*.{ts,js,json}' --write",
    "prepare": "is-ci || husky install",
    "bootstrap": "yarn start:docker && yarn && yarn prisma:migrate",
    "start:docker": "docker-compose -f docker-compose.dev.yml up -d",
    "clean:docker": "docker-compose -f docker-compose.dev.yml down --volumes --remove-orphans",
    "clean:git": "git branch --merged >/tmp/merged-branches && nano /tmp/merged-branches && xargs git branch -D </tmp/merged-branches && git fetch --prune --all",
    "refresh": "yarn clean:docker && yarn bootstrap"
  },
  "dependencies": {
    "@fastify/error": "^3.0.0",
    "@fastify/swagger": "^8.3.0",
    "@fastify/swagger-ui": "^1.3.0",
    "@fastify/websocket": "^7.1.2",
    "@prisma/client": "^4.10.1",
    "dotenv": "^16.0.3",
    "fastify": "^4.12.0",
    "fluent-json-schema": "^4.0.0",
    "jsonwebtoken": "^9.0.0",
    "pino-pretty": "^9.1.1",
    "prisma": "^4.10.1"
  },
  "devDependencies": {
    "@types/jest": "^29.2.6",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.11.18",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "barrelsby": "^2.5.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "ts-jest": "^29.0.5",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4"
  },
  "tsed": {
    "packageManager": "yarn",
    "convention": "default",
    "architecture": "default"
  }
}
